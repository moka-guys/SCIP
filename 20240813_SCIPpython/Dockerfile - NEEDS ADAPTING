FROM python:3.6
RUN mkdir /code /resources
RUN mkdir -p /outputs
WORKDIR /code
COPY ./fetalFracCalc.pl /code/home/isabel/GITHUB/SCIP/requirements.txt
COPY requirements.txt /code
